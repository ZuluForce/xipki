<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0" xmlns:cm="http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.1.0" default-activation="lazy">
  <reference id="raWorker" interface="org.xipki.ca.client.api.RAWorker"/>
  <reference id="filePathCompleter" interface="org.xipki.console.karaf.FilePathCompleter"/>
  <bean id="crlReasonCompleter" class="org.xipki.ca.client.shell.completer.ClientCRLReasonCompleter"/>
  <bean id="caNameCompleter" class="org.xipki.ca.client.shell.completer.CaNameCompleter">
    <property name="raWorker" ref="raWorker"/>
  </bean>
  <command-bundle xmlns="http://karaf.apache.org/xmlns/shell/v1.1.0">
    <command name="caclient/enroll">
      <action class="org.xipki.ca.client.shell.RAEnrollCertCommand">
        <property name="raWorker" ref="raWorker"/>
      </action>
      <optional-completers>
        <entry key="-out" value-ref="filePathCompleter"/>
        <entry key="-p10" value-ref="filePathCompleter"/>
      </optional-completers>
    </command>
    <command name="caclient/revoke">
      <action class="org.xipki.ca.client.shell.RARevokeCertCommand">
        <property name="raWorker" ref="raWorker"/>
      </action>
      <optional-completers>
        <entry key="-cert" value-ref="filePathCompleter"/>
        <entry key="-cacert" value-ref="filePathCompleter"/>
        <entry key="-reason" value-ref="crlReasonCompleter"/>
      </optional-completers>
    </command>
    <command name="caclient/unrevoke">
      <action class="org.xipki.ca.client.shell.RAUnrevokeCertCommand">
        <property name="raWorker" ref="raWorker"/>
      </action>
      <optional-completers>
        <entry key="-cert" value-ref="filePathCompleter"/>
        <entry key="-cacert" value-ref="filePathCompleter"/>
      </optional-completers>
    </command>
    <command name="caclient/remove">
      <action class="org.xipki.ca.client.shell.RARemoveCertCommand">
        <property name="raWorker" ref="raWorker"/>
      </action>
      <optional-completers>
        <entry key="-cert" value-ref="filePathCompleter"/>
        <entry key="-cacert" value-ref="filePathCompleter"/>
      </optional-completers>
    </command>
    <command name="caclient/gencrl">
      <action class="org.xipki.ca.client.shell.RAGenCRLCommand">
        <property name="raWorker" ref="raWorker"/>
      </action>
      <optional-completers>
        <entry key="-out" value-ref="filePathCompleter"/>
        <entry key="-ca" value-ref="caNameCompleter"/>
      </optional-completers>
    </command>
    <command name="caclient/getcrl">
      <action class="org.xipki.ca.client.shell.RAGetCRLCommand">
        <property name="raWorker" ref="raWorker"/>
      </action>
      <optional-completers>
        <entry key="-out" value-ref="filePathCompleter"/>
        <entry key="-ca" value-ref="caNameCompleter"/>
      </optional-completers>
    </command>
    <command name="caclient/loadtest-enroll">
      <action class="org.xipki.ca.client.shell.loadtest.CALoadTestCommand">
        <property name="raWorker" ref="raWorker"/>
      </action>
    </command>
  </command-bundle>
</blueprint>
