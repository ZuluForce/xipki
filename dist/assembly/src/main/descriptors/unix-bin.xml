<assembly>
    <id>unix-bin</id>

    <formats>
        <format>tar.gz</format>
    </formats>

    <fileSets>
        <!--
            Copy TLS keys
        -->
        <fileSet>
            <directory>${project.basedir}/../../demo-tslkeys</directory>
            <includes>
                <!-- required by both server and client -->
                <include>tls-truststore.jks</include>
                <!-- required by server -->
                <include>tls-server-keystore.jks</include>
                <!-- required by client -->
                <include>tls-p11client-keystore.jks</include>
            </includes>
            <outputDirectory>/etc/</outputDirectory>
            <fileMode>0644</fileMode>
            <directoryMode>0755</directoryMode>
        </fileSet>

        <!--
            Copy over jar files for the lib dir
        -->
        <fileSet>
            <directory>${project.build.directory}/dependencies</directory>
            <includes>
                <include>*-branding.jar</include>
            </includes>
            <outputDirectory>/lib/</outputDirectory>
            <fileMode>0644</fileMode>
            <directoryMode>0755</directoryMode>
        </fileSet>

        <!-- Copy over everything that needs to get unix line endings -->
        <fileSet>
            <directory>${project.build.directory}/classes/etc</directory>
            <outputDirectory>/etc/</outputDirectory>
            <lineEnding>unix</lineEnding>
            <fileMode>0644</fileMode>
            <directoryMode>0755</directoryMode>
        </fileSet>

        <!-- Copy over everything unfiltered ressources -->
        <fileSet>
            <directory>${project.basedir}/src/main/unfiltered</directory>
            <includes>
                <include>**/*.sh</include>
            </includes>
            <outputDirectory>/</outputDirectory>
            <filtered>false</filtered>
            <fileMode>0755</fileMode>
            <directoryMode>0755</directoryMode>
        </fileSet>

        <fileSet>
            <directory>${project.basedir}/src/main/unfiltered</directory>
            <excludes>
                <exclude>**/*.sh</exclude>
            </excludes>
            <outputDirectory>/</outputDirectory>
            <filtered>false</filtered>
            <fileMode>0644</fileMode>
            <directoryMode>0755</directoryMode>
        </fileSet>

        <fileSet>
            <directory>${project.build.directory}/features-repo</directory>
            <outputDirectory>system</outputDirectory>
            <fileMode>0644</fileMode>
            <directoryMode>0755</directoryMode>
        </fileSet>

        <!-- JDBC drivers -->
        <fileSet>
            <!--directory>${project.build.directory}/jdbc</directory-->
            <directory>../jdbc</directory>
            <outputDirectory>/lib/ext</outputDirectory>
            <fileMode>0644</fileMode>
            <directoryMode>0755</directoryMode>
        </fileSet>

        <!-- native libraries -->
        <fileSet>
            <directory>${project.build.directory}/native-lib</directory>
            <outputDirectory>native-lib</outputDirectory>
            <fileMode>0644</fileMode>
            <directoryMode>0755</directoryMode>
        </fileSet>

        <fileSet>
            <directory>${project.build.directory}/sql</directory>
            <includes>
                <include>liquibase/liquibase</include>
		<include>**/*.sh</include>
            </includes>
            <outputDirectory>sql</outputDirectory>
            <fileMode>0755</fileMode>
            <directoryMode>0755</directoryMode>
        </fileSet>

        <fileSet>
            <directory>${project.build.directory}/sql</directory>
            <excludes>
                <exclude>liquibase/liquibase</exclude>
                <exclude>liquibase/javadoc/**</exclude>
		<exclude>**/*.sh</exclude>
            </excludes>
            <outputDirectory>sql</outputDirectory>
            <fileMode>0644</fileMode>
            <directoryMode>0755</directoryMode>
        </fileSet>

        <!-- Copy over start scripts -->
        <fileSet>
            <!-- in case we replace them with updated scripts
            <directory>${project.basedir}/src/main/bin/unix</directory>
            -->
            <directory>${project.build.directory}/dependencies/apache-karaf-${karaf.version}/bin</directory>
            <outputDirectory>/bin/</outputDirectory>
            <lineEnding>unix</lineEnding>
            <fileMode>0755</fileMode>
            <directoryMode>0755</directoryMode>
        </fileSet>

        <!-- Expanded Karaf -->
        <fileSet>
            <directory>${project.build.directory}/dependencies/apache-karaf-${karaf.version}</directory>
            <outputDirectory>/</outputDirectory>
            <excludes>
                <!--
                    exclude files and directories without replacement
                -->
                <exclude>**/demos/**</exclude>
                <exclude>deploy/README</exclude>
		<exclude>README</exclude>
                <exclude>LICENSE</exclude>
                <exclude>NOTICE</exclude>
                <exclude>RELEASE-NOTES</exclude>
                <exclude>karaf-manual*</exclude>
            </excludes>
            <fileMode>0644</fileMode>
            <directoryMode>0755</directoryMode>
        </fileSet>

    </fileSets>

    <files>
        <file>
            <source>${project.basedir}/../../LICENSE</source>
            <outputDirectory>/</outputDirectory>
            <destName>LICENSE</destName>
            <fileMode>0644</fileMode>
            <lineEnding>unix</lineEnding>
        </file>
        <file>
            <source>${project.basedir}/../../README.md</source>
            <outputDirectory>/</outputDirectory>
            <destName>README.md</destName>
            <fileMode>0644</fileMode>
            <lineEnding>unix</lineEnding>
        </file>
       <file>
            <source>${project.build.directory}/dependencies/apache-karaf-${karaf.version}/LICENSE</source>
            <outputDirectory>Licenses</outputDirectory>
            <destName>karaf-LICENSE.txt</destName>
            <fileMode>0644</fileMode>
            <lineEnding>unix</lineEnding>
        </file>
    </files>

</assembly>
