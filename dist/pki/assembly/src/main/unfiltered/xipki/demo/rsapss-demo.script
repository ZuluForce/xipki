KEYSIZE = 2048

# Valid signer algos are SHA<n>withRSAandMGF1, where n is 1, 256, 384 and 512
#
CA_SIGNER_ALGO = SHA256withRSAandMGF1

echo "========================================================"
echo "||         DEMO RSA (PSS) with PKCS#12 Key            ||"
echo "========================================================"

feature:install xipki-security-shell

# Wait one second
sleep 1000

xipki-file:rm -r -f output

xipki-tk:rsa-p12 -pwd 1234 -keysize $KEYSIZE -out output/RCA1.p12 \
  -subject "CN=RCA1"

xipki-tk:rsa-p12 -pwd 1234 -keysize $KEYSIZE -out output/SubCA1.p12 \
  -subject "CN=SubCA1"

xipki-tk:rsa-p12 -pwd 1234 -keysize $KEYSIZE -out output/SubCAwithCRL1.p12 \
  -subject "CN=SubCAwithCRL1"

source ./xipki/demo/prepare.script

source ./xipki/demo/p12.script

source ./xipki/demo/ra.script

source ./xipki/demo/ca-qa.script

source ./xipki/demo/ocsp.script

